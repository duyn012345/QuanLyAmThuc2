<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:layout_gravity="center"
    android:backgroundTint="@android:color/white">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="8dp">

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/imgMonAn"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginBottom="8dp"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:src="@drawable/bn1"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.MonAnBoTron" />

<TextView
    android:id="@+id/tvTenMonAn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tên món ăn"
    android:textColor="#230901"
    android:textSize="14sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvTenTinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên tỉnh"
        android:textColor="#230901"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:drawableStart="@drawable/address"
        android:drawablePadding="4dp"/>


</LinearLayout>
    </androidx.cardview.widget.CardView>
