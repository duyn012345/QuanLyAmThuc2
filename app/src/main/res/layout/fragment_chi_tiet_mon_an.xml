<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTenMonChiTiet"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:fontFamily="cursive"
            android:textColor="#5B020B"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSliderChiTiet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/address"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvTinhChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên tỉnh"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvGioiThieuChiTiet"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/thongtinnoibat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n------   Thông tin nổi bật   ------"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="cursive"
            android:textColor="#5B020B"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/tvGiaCaChiTiet"
            android:textSize="16sp"
            android:drawableStart="@drawable/money1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDiaChiChiTiet"
            android:textSize="16sp"
            android:drawableStart="@drawable/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvXemDiaChiChiTiet"
            android:textSize="16sp"
            android:drawableStart="@drawable/gg_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/tvMoTaChiTiet"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>

    </LinearLayout>
</ScrollView>
