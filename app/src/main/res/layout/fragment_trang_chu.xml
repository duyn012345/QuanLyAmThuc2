                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="45dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/danhgia2"
                android:padding="8dp"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="-15dp"
                android:layout_marginEnd="100dp"
                android:src="@drawable/danhgia2"
                android:padding="8dp"
                android:scaleType="centerInside" />

        </FrameLayout>

        <!-- Thông tin về bản đồ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBanDo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nMiền Trung Việt Nam gồm 19 tỉnh, trải dài từ Thanh Hóa đến Bình Thuận và khu vực Tây Nguyên, tạo nên một vùng đất độc đáo với sự đa dạng về địa hình, khí hậu và văn hóa. Nơi đây nổi bật với bờ biển dài, núi non hùng vĩ, và những cánh đồng bazan màu mỡ. Miền Trung còn là vùng đất của ẩm thực đặc sắc và những con người hiền hòa, chịu thương chịu khó, tạo nên bản sắc riêng đầy cuốn hút."
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="cursive"

                android:textColor="#9D0E20"
                android:paddingBottom="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/ban_do1"
                android:scaleType="centerCrop"
                android:contentDescription="Bản đồ miền Trung" />

        </LinearLayout>

