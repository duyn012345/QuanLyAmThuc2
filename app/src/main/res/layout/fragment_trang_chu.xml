                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Đăng bài chia sẻ\n\n Đăng bài viết về món ăn mới hoặc câu chuyện ẩm thực của riêng mình."
                    android:textColor="#000"
                    android:textSize="11sp" />
            </LinearLayout>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/restorent"
                android:scaleType="centerCrop" />

            <!-- Chữ nằm trên ảnh lớn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#66000000"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ý kiến trải nghiệm từ mọi người"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#E4E1E1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem đánh giá chân thực của những người đã trải nghiệm món ăn, giúp bạn dễ dàng lựa chọn món ăn khi đến tỉnh nào đó, mang lại trải nghiệm đáng nhớ"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#E0DCDC"
                    android:gravity="center"
                    android:textAlignment="center" />

            </LinearLayout>

