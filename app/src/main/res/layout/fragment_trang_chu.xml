                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a2" />

                <!-- Dãy 5 ngôi sao -->
                <LinearLayout
                    android:layout_width="wrap_content"
