<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.MonAnHinhTron" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTitleRedSmall" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#FF0000</item> <!-- Màu đỏ -->
        <item name="android:textSize">20sp</item>     <!-- Kích thước nhỏ hơn mặc định -->
        <item name="android:textStyle">bold</item>    <!-- Nếu cần chữ đậm -->
    </style>


    <style name="ContactCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="ContactIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">#D32F2F</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="ContactTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="ContactText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555</item>
    </style>

</resources>